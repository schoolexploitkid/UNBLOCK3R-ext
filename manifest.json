{
  "manifest_version": 3,
  "name": "UNBLOCK3R",
  "version": "0.0.1",
  "description": "Unblocks all websites",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["unblock.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
